<%- include("layout.ejs") %>

<div class="page-header mb-4">
    <h1 class="page-title">Create New Post</h1>
    <p class="page-description">Share your thoughts with the world</p>
</div>

<div class="full-post">
    <form action="/compose" method="POST" class="form-custom">
        <div class="mb-4">
            <label for="title" class="form-label fw-bold">Post Title</label>
            <input type="text" class="form-custom-control" id="title" name="title" required 
                   placeholder="Enter a descriptive title...">
            <div class="form-text">A good title is clear, specific, and engaging</div>
        </div>
        
        <div class="mb-4">
            <label for="content" class="form-label fw-bold">Content</label>
            <textarea class="form-custom-control" id="content" name="content" rows="15" required
                     placeholder="Write your post content here..."></textarea>
            <div class="form-text">Format your text using markdown or just plain text</div>
        </div>
        
        <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="/" class="btn btn-custom btn-custom-outline">
                <i class="bi bi-x-lg"></i> Cancel
            </a>
            <button type="submit" class="btn btn-custom btn-custom-primary">
                <i class="bi bi-check-lg"></i> Publish Post
            </button>
        </div>
    </form>
</div>

<!-- Simple markdown helper reference -->
<div class="mt-4 p-3 border rounded bg-light">
    <h5>Formatting Tips</h5>
    <div class="row">
        <div class="col-md-4">
            <p><code>**bold text**</code> for <strong>bold text</strong></p>
            <p><code>*italic text*</code> for <em>italic text</em></p>
        </div>
        <div class="col-md-4">
            <p><code># Heading 1</code> for headings</p>
            <p><code>- item</code> for bullet points</p>
        </div>
        <div class="col-md-4">
            <p><code>[link text](url)</code> for links</p>
            <p><code>---</code> for horizontal line</p>
        </div>
    </div>
</div>

