<%- include("layout.ejs") %>

<div class="page-header mb-4">
    <h1 class="page-title">Edit Post</h1>
    <p class="page-description">Update your existing post</p>
</div>

<% if (locals.post) { %>
    <div class="full-post">
        <form action="/edit/<%= post.id %>" method="POST" class="form-custom">
            <div class="mb-4">
                <label for="title" class="form-label fw-bold">Post Title</label>
                <input type="text" class="form-custom-control" id="title" name="title" 
                       value="<%= post.title %>" required>
            </div>
            
            <div class="mb-4">
                <label for="content" class="form-label fw-bold">Content</label>
                <textarea class="form-custom-control" id="content" name="content" 
                          rows="15" required><%= post.content %></textarea>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mt-4">
                <div>
                    <a href="/post/<%= post.id %>" class="btn btn-custom btn-custom-outline">
                        <i class="bi bi-x-lg"></i> Cancel
                    </a>
                </div>
                <div>
                    <button type="submit" class="btn btn-custom btn-custom-primary">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                </div>
            </div>
        </form>
    </div>
<% } else { %>
    <div class="text-center py-5">
        <i class="bi bi-exclamation-triangle" style="font-size: 3rem; color: #dee2e6;"></i>
        <h2 class="mt-3">Post Not Found</h2>
        <p class="text-secondary">The post you're trying to edit doesn't exist or has been removed.</p>
        <a href="/" class="btn btn-custom btn-custom-primary mt-3">Return to Home</a>
    </div>
<% } %>

<%- include("partials/footer.ejs") %>