<%- include("layout.ejs") %>

<header class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="page-title">My Blog</h1>
        <% if (typeof user !== 'undefined' && user) { %>
            <a href="/compose" class="btn btn-custom btn-custom-primary d-flex align-items-center gap-2">
                <i class="bi bi-plus-lg"></i>
                <span>New Post</span>
            </a>
        <% } %>
    </div>
    <p class="page-description">Sharing my thoughts on technology, programming, and life lessons</p>
</header>

<% if (locals.blogPosts && blogPosts.length > 0) { %>
    <div class="posts-grid">
        <% blogPosts.forEach(post => { %>
            <div class="blog-card">
                <div class="blog-card-header">
                    <h2 class="blog-card-title">
                        <a href="/post/<%= post.id %>"><%= post.title %></a>
                    </h2>
                    <div class="blog-card-meta">
                        <span><i class="bi bi-calendar3"></i> <%= post.date %></span>
                    </div>
                </div>
                <div class="blog-card-body">
                    <p class="blog-card-text">
                        <%= post.content.length > 150 ? post.content.substring(0, 150) + '...' : post.content %>
                    </p>
                </div>
                <div class="blog-card-footer">
                    <a href="/post/<%= post.id %>" class="btn btn-custom btn-custom-outline btn-sm">Read More</a>
                    
                    <% if (typeof user !== 'undefined' && user) { %>
                        <div class="blog-actions">
                            <a href="/edit/<%= post.id %>" class="action-btn" title="Edit Post">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a href="/delete/<%= post.id %>" class="action-btn" title="Delete Post"
                               onclick="return confirm('Are you sure you want to delete this post?');">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    <% } %>
                </div>
            </div>
        <% }) %>
    </div>
<% } else { %>
    <div class="text-center py-5">
        <i class="bi bi-journal-text" style="font-size: 3rem; color: #dee2e6;"></i>
        <h2 class="mt-3">No Posts Yet</h2>
        <p class="text-secondary">Start writing your first blog post now!</p>
        <% if (typeof user !== 'undefined' && user) { %>
            <a href="/compose" class="btn btn-custom btn-custom-primary mt-3">Create First Post</a>
        <% } %>
    </div>
<% } %>
</div>

<%- include("partials/footer.ejs") %>