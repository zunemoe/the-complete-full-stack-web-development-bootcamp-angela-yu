<%- include("layout.ejs") %>

<% if (locals.post) { %>
    <div class="full-post">
        <div class="mb-4">
            <a href="/" class="btn btn-custom btn-custom-outline btn-sm">
                <i class="bi bi-arrow-left"></i> Back to Posts
            </a>
        </div>
        
        <h1 class="blog-post-title"><%= post.title %></h1>
        <div class="blog-post-meta">
            <span><i class="bi bi-calendar3"></i> <%= post.date %></span>
            
            <% if (typeof user !== 'undefined' && user) { %>
                <div class="mt-3 mb-4">
                    <a href="/edit/<%= post.id %>" class="btn btn-custom btn-custom-outline btn-sm">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a href="/delete/<%= post.id %>" class="btn btn-custom btn-custom-outline btn-sm text-danger ms-2" 
                       onclick="return confirm('Are you sure you want to delete this post?');">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            <% } %>
        </div>
        
        <hr class="mb-4">
        
        <div class="post-content">
            <%- post.content.replace(/\n/g, '<br>') %>
        </div>
        
        <hr class="mt-5 mb-4">
        
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <a href="/" class="btn btn-custom btn-custom-outline">
                    <i class="bi bi-arrow-left"></i> All Posts
                </a>
            </div>
            
            <div class="d-flex gap-3">
                <a href="#" class="social-icon" title="Share on Twitter">
                    <i class="bi bi-twitter"></i>
                </a>
                <a href="#" class="social-icon" title="Share on Facebook">
                    <i class="bi bi-facebook"></i>
                </a>
                <a href="#" class="social-icon" title="Share on LinkedIn">
                    <i class="bi bi-linkedin"></i>
                </a>
            </div>
        </div>
    </div>
<% } else { %>
    <div class="text-center py-5">
        <i class="bi bi-exclamation-triangle" style="font-size: 3rem; color: #dee2e6;"></i>
        <h2 class="mt-3">Post Not Found</h2>
        <p class="text-secondary">The post you're looking for doesn't exist or has been removed.</p>
        <a href="/" class="btn btn-custom btn-custom-primary mt-3">Return to Home</a>
    </div>
<% } %>

<%- include("partials/footer.ejs") %>