<%- include('partials/header', { title: book.title }) %>

<div class="container py-4">
    <div class="row">
        <!-- Cover Image -->
        <div class="col-md-4 mb-4">
            <img src="<%= book.cover_url || '/images/placeholder.png' %>" class="img-fluid rounded shadow-sm" alt="<%= book.title %>">
        </div>
        <!-- Book Info -->
        <div class="col-md-8 position-relative">
            <% if (user) { %>
                <div class="position-absolute top-0 end-0 d-flex align-items-center gap-2 p-2">                    
                    <a href="/edit/<%= book.id %>" class="text-warning me-2" title="Edit"><i class="bi bi-pencil-square fs-5"></i></a>
                    <form action="/delete/<%= book.id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this book?');">
                        <button type="submit" class="btn btn-link text-danger p-0"><i class="bi bi-trash fs-5"></i></button>
                    </form>
                </div>
            <% } %>
            <h2><%= book.title %></h2>
            <p class="text-muted">by <strong><%= book.author %></strong></p>
            <p><strong>Date Read:</strong><%= book.date_read.toDateString() %></p>
            <p><strong>Rating:</strong> <%= book.rating %>/10</p>
            <p><strong>ISBN: </strong><%= book.isbn || 'N/A' %></p>
            <hr>
            <p><%- book.review.replace(/\n/g, '<br>') %></p>
        </div>

        <!-- Edit/Delete buttons for logged-in users -->
         
    </div>
</div>

<%- include("partials/footer") %>