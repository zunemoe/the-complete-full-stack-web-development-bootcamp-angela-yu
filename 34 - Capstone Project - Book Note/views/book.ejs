<%- include('partials/header', { title: book.title }) %>

<div class="container py-4">
    <div class="row">
        <!-- Cover Image -->
        <div class="col-md-4 mb-4">
            <img src="<%= book.cover_url || '/images/placeholder.png' %>" class="img-fluid rounded shadow-sm" alt="<%= book.title %>">
        </div>
        <!-- Book Info -->
        <div class="col-md-8">
            <h2><%= book.title %></h2>
            <p class="text-muted">by <strong><%= book.author %></strong></p>
            <p><strong>Date Read:</strong><%= book.date_read.toDateString() %></p>
            <p><strong>Rating:</strong> <%= book.rating %>/10</p>
            <p><strong>ISBN: </strong><%= book.isbn || 'N/A' %></p>
            <hr>
            <p><%= book.review %></p>
        </div>

        <!-- Edit/Delete buttons for logged-in users -->
         <% if (user) { %>
            <div class="mt-4 d-flex gap-2">
                <a href="/edit/<%= book.id %>" class="btn btn-outline-primary">Edit</a>
                <form action="/delete/<%= book.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?');">
                    <button type="submit" class="btn btn-outline-danger">Delete</button>
                </form>
            </div>
        <% } %>
    </div>
</div>

<%- include("partials/footer") %>