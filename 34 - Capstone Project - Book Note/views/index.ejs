<%- include('partials/header', { title: 'Book Note' }) %>

<div class="conainer py-4">
    <!-- Page Title and Action Buttons -->
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap">
        <h1 class="mb-3 mb-md-0">Books I've Read</h1>
    </div>
    
    <!-- Search and Sort -->
    <form method="GET" action="/search" class="row g-2 mb-4">
        <div class="col-md-6">
            <input type="text" name="search" class="form-control" placeholder="Search by title, author or isbn"
                value="<%= search || '' %>">
        </div>
        <div class="col-md-3">
            <select name="sort" class="form-select">
                <option value="">Sort by...</option>
                <option value="title" <%=sort==='title' ? 'selected' : '' %>>Title</option>
                <option value="author" <%=sort==='author' ? 'selected' : '' %>>Author</option>
                <option value="date_read" <%=sort==='date_read' ? 'selected' : '' %>>Date Read</option>
                <option value="rating" <%=sort==='rating' ? 'selected' : '' %>>Rating</option>
            </select>
        </div>
        <div class="col-md-3 d-grid">
            <button type="submit" class="btn btn-secondary">Search</button>
        </div>
    </form>
    
    <!-- Book List -->
     <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% books.forEach(book => { %>
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <% if (book.cover_url) { %>
                        <a href="/book/<%= book.id %>">
                            <img src="<%= book.cover_url %>" class="card-img-top" alt="<%= book.title %>">
                        </a>
                        <% } %>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">
                                    <a href="/book/<%= book.id %>" class="text-decoration-none text-dark">
                                        <%= book.title %>
                                    </a>
                                </h5>
                                <p class="card-subtitle text-muted mb-2">by <%= book.author %></p>
                                <p class="mb-1"><strong>Read:</strong><%= book.date_read %></p>
                                <p class="mb-1"><strong>Rating:</strong><%= book.rating %>/10</p>
                                <p class="card-text mt-2 text-truncate" style="max-height: 6rem;"><%= book.review %></p>
                                <div class="mt-auto">                                
                                    <% if (user) { %>
                                        <a href="/edit/<%= book.id %>" class="btn btn-sm btn-warning mt-2">Edit</a>
                                        <form method="POST" action="/delete/<%= book.id %>" class="d-inline">
                                            <button type="submit" class="btn btn-sm btn-danger mt-2">Delete</button>
                                        </form>
                                    <% } %>
                                </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include("partials/footer") %>